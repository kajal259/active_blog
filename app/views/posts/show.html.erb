<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <%= image_tag @post.header_image.variant(resize_to_limit: [400, 600]) %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<% if @post.files.any? %>
  <h3>Attachments:</h3>
  <% @post.files.each do |file| %>
    <% if file.variable? %> 
      <%= image_tag file.variant(resize_to_limit: [400, 400]) %>
    <% elsif file.previewable? %>
      <%= image_tag file.variant(resize_to_limit: [400, 400]), rails_blob_path(file, disposition: :attachement) %>
    <% else %>
      <%= link_to file.filename, rails_blob_path(file, disposition: :attachment) %>
    <% end %>
  <% end %>
<% end %>
<strong>Attachments:</strong>
 <ul>
 <% @post.files.each do |file| %>
   <li>
     <%= link_to file.filename, rails_blob_path(file, disposition: :attachment) %>
     <%= link_to 'Remove', delete_file_post_url(file.id), method: :delete, data: { confirm: 'Are you sure?' } %>
   </li>
 <% end %>
 </ul>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
